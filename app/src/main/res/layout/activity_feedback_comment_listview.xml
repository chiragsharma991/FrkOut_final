<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlFbCmt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlFbCmtUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lsFbCmt"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin">

        <RelativeLayout
            android:id="@+id/rlFbCmtUserImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.codeginger.frkout.RoundedImageView
                android:id="@+id/ivFbCmtUser"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/txtFbCmtUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_dark"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <TextView android:id="@+id/txtFbCmtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rlFbCmtUserImg"
            android:text="Neeraj Tiwari"
            android:textStyle="bold"
            android:textColor="@color/orange_very_light"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <TextView android:id="@+id/txtFbCmtUserCmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/rlFbCmtUserImg"
            android:layout_below="@+id/txtFbCmtUserName"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod"
            android:textColor="@color/black_dark"
            android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView android:id="@+id/txtFbCmtUserCmtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textSize="10dp"
            android:text="01 Feb 16, 12 : 45 PM"
            android:textColor="@color/black_light"
            android:layout_toRightOf="@+id/rlFbCmtUserImg"
            android:layout_below="@+id/txtFbCmtUserCmt" />

    </RelativeLayout>

    <View
        android:id="@+id/vwFbCmtUser"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rlFbCmtUser"
        android:background="@color/black_very_light"
        android:visibility="gone"/>

</RelativeLayout>