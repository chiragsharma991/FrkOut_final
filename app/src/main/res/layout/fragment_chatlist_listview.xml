<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlUserList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/rlChatListUserImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.codeginger.frkout.RoundedImageView
            android:id="@+id/ivChatListUserImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/txtChatListImgName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_dark"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <TextView android:id="@+id/txtChatListUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="@color/black_dark"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/rlChatListUserImg"  />

</RelativeLayout>
